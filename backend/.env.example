# =============================================================================
# FoodMoment 本地开发环境配置
# 复制此文件为 .env 使用: cp .env.example .env
# =============================================================================

# 应用配置
APP_NAME=FoodMoment API
DEBUG=true
API_V1_PREFIX=/api/v1

# 数据库 (本地 Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/foodmoment

# Redis (本地 Docker)
REDIS_URL=redis://localhost:6379/0

# JWT 认证
JWT_SECRET_KEY=local-dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# AI 服务 - Anthropic Claude (通过 Agent Maestro 代理)
ANTHROPIC_BASE_URL=http://localhost:23333/api/anthropic
ANTHROPIC_MODEL=claude-opus-4.6-fast
ANTHROPIC_ENABLED=true
ANTHROPIC_PROXY_KEY=

# 对象存储 - MinIO (本地 Docker，S3 兼容)
# 控制台: http://localhost:9001 (minioadmin / minioadmin123)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=uploads
MINIO_SECURE=false
STORAGE_PUBLIC_URL=http://localhost:9000/uploads

# 日志
LOG_LEVEL=DEBUG
